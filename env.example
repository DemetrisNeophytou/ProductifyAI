# ============================================================================
# ProductifyAI Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# See docs/DEPLOYMENT_ENV.md for where each variable is used

# =============================================================================
# DATABASE - Supabase (Backend Only)
# =============================================================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Legacy PostgreSQL (deprecated - use Supabase)
POSTGRES_DB=productifyai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# FRONTEND - Vite Environment Variables (Vercel)
# =============================================================================
# These are exposed to the browser - NO SECRETS

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_API_URL=http://localhost:5050
VITE_APP_NAME=ProductifyAI
VITE_APP_VERSION=1.0.0
VITE_EVAL_MODE=false
VITE_SHOW_DEV_BANNER=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Password for authentication
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key for AI content generation
OPENAI_API_KEY=your_openai_api_key_here

# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_PLUS=price_plus_monthly_id
STRIPE_PRICE_ID_PRO=price_pro_monthly_id

# Stripe Connect (for marketplace payouts)
STRIPE_CONNECT_ACCOUNT_ID=acct_your_connect_account

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application Port
PORT=5050

# Enable in-memory mocks for local development without Docker (true/false)
MOCK_DB=true

# Enable Stripe mock mode when STRIPE_SECRET_KEY is not provided (true/false)
MOCK_STRIPE=true

# =============================================================================
# BACKEND - Authentication & Security (Render)
# =============================================================================

# JWT Secret (generate: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-minimum-32-characters-long

# Session Secret (generate: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-minimum-32-characters-long

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# =============================================================================
# BACKEND - CORS Configuration (Render)
# =============================================================================

# Allowed origins (comma-separated, NO SPACES)
CORS_ORIGIN=http://localhost:5173,https://productifyai.vercel.app
FRONTEND_URL=https://productifyai.vercel.app

# Already defined in FRONTEND section above

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Resend API Key (for transactional emails)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=ProductifyAI <noreply@productify.ai>
APP_BASE_URL=http://localhost:5173

# =============================================================================
# MONITORING & ALERTS (CI/CD GitHub Secrets)
# =============================================================================

# Health check endpoints (used by GitHub Actions uptime monitoring)
BACKEND_HEALTH_URL=https://api.productifyai.com/api/health
# FRONTEND_URL is defined above in APPLICATION SETTINGS

# Alert configuration (used by alert system)
ALERT_EMAIL_TO=admin@productifyai.com,ops@productifyai.com

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Render auto-restart (optional - for production deployments)
RENDER_API_KEY=rnd_your_render_api_key_here
RENDER_SERVICE_ID=srv-your_render_service_id
ENABLE_AUTO_RESTART=false

# Legacy SMTP (optional fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# =============================================================================
# OPTIONAL: FILE STORAGE
# =============================================================================

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# ADMIN & EVALUATION SETTINGS
# =============================================================================

# Enable admin features (KB Admin, AI Evaluation Dashboard)
# Set to 'true' to show admin menu items in the UI
VITE_EVAL_MODE=false

# =============================================================================
# DEVELOPMENT SETTINGS (for local development only)
# =============================================================================

# Enable debug logging
DEBUG=false

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Request timeout settings
REQUEST_TIMEOUT=30000
