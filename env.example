# ProductifyAI Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_DB=productifyai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Supabase Configuration (if using Supabase instead of local PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Password for authentication
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key for AI content generation
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=production

# Application Port
PORT=5050

# Enable in-memory mocks for local development without Docker (true/false)
MOCK_DB=true

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret for authentication tokens
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# Session Secret for session management
SESSION_SECRET=your_session_secret_key_here_minimum_32_characters

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:5050

# Application metadata
VITE_APP_NAME=ProductifyAI
VITE_APP_VERSION=1.0.0

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for future features)
# =============================================================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# =============================================================================
# OPTIONAL: FILE STORAGE
# =============================================================================

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# DEVELOPMENT SETTINGS (for local development only)
# =============================================================================

# Enable debug logging
DEBUG=false

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Request timeout settings
REQUEST_TIMEOUT=30000
